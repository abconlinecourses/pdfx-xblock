{
  "name": "pdfx-xblock",
  "version": "2.0.0",
  "description": "PDF XBlock with ES6 modules, annotation tools, and modern UI",
  "main": "dist/pdfx-xblock.umd.cjs",
  "module": "dist/pdfx-xblock.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:main && npm run build:edit",
    "build:main": "vite build --config vite.config.js",
    "build:edit": "vite build --config vite.edit.config.js",
    "watch:main": "vite build --config vite.config.js --watch",
    "watch:edit": "vite build --config vite.edit.config.js --watch",
    "watch": "npm run build && run-p --print-label watch:*",
    "preview": "vite preview",
    "serve": "vite preview"
  },
  "keywords": [
    "pdf",
    "xblock",
    "edx",
    "annotation",
    "viewer",
    "es6",
    "modules"
  ],
  "author": "PDF XBlock Team",
  "license": "MIT",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "terser": "^5.36.0",
    "vite": "^5.4.19"
  },
  "peerDependencies": {
    "fabric": "^6.6.6"
  }
}
